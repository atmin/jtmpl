{
  "name": "jtmpl-js",
  "version": "0.3.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/atmin/jtmpl.git"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "devDependencies": {
    "browserify": "^4.2.0",
    "element-class": "^0.1.1",
    "istanbul": "^0.2.13",
    "jsdom": "^0.11.0",
    "jshint": "^2.5.1",
    "simple-server": "^1.0.1",
    "uglify-js": "^2.4.14",
    "watchify": "^0.10.2"
  },
  "scripts": {
    "jshint": "jshint jtmpl/*.js",
    "browserify": "browserify jtmpl/main.js > build/jtmpl.js",
    "watchify": "watchify jtmpl/main.js -o build/jtmpl.js -dv",
    "uglify": "uglifyjs build/jtmpl.js -c -m --screw-ie8 -o build/jtmpl.min.js",
    "start": "npm run watchify & simple-server public 8000",
    "build": "npm run jshint && npm run browserify && npm run uglify",
    "test": "npm run build && istanbul cover spec.js"
  }
}
