{
  "name": "jtmpl-js",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/atmin/jtmpl.git"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "devDependencies": {
    "browserify": "^4.2.0",
    "element-class": "^0.1.1",
    "freak": "^0.2.2",
    "jshint": "^2.5.2",
    "jtmpl-core": "1.0.2",
    "simple-server": "^1.0.1",
    "uglify-js": "^2.4.14",
    "watchify": "^0.10.2"
  },
  "scripts": {
    "jshint": "jshint src/*.js",
    "browserify": "browserify --standalone jtmpl src/main.js > jtmpl.js",
    "watch": "watchify --standalone jtmpl src/main.js -o jtmpl.js -dv",
    "uglify": "uglifyjs jtmpl.js -c -m --screw-ie8 -o jtmpl.min.js",
    "start": "npm run dev",
    "dev": "npm run watch & (sleep 1 && xdg-open http://localhost:4000) && jekyll serve --watch",
    "build": "npm run jshint && npm run browserify && npm run uglify",
    "test": "npm run build && phantomjs tests/phantom.js"
  }
}
